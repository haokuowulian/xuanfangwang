            </view>

            <view class="house-info">
              <view class="house-name">{{house.housename}}</view>
              <view class="houseinfo">{{house.houseinfo}}</view>
              <view class="houseinfo">{{house.price}}</view>
              <view a:if="{{house.housestatus==0}}" class="house-status">待租中</view>
              <view a:if="{{house.housestatus==1}}" class="house-status">已出租</view>
              <view a:if="{{house.housestatus==2}}" class="house-status">已失效</view>
            </view>

          </view>
        </block>
      </view>

      <view class="plan-btn">
        <view class="btn">
          <view class="btn-button">联系房东</view>
          <view class="btn-button">删除</view>
        </view>
      </view>
    </view>
  </block>
</view>